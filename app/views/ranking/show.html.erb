<div class="container-details mx-auto">
  <h2 class="text-4xl mb-4 font-medium text-center text-blue-700"><%= @details['title']%></h2>
  <div class="bg-white mb-4 border-blue-700 text-gray-700 border-2 rounded p-8 shadow-lg">
    <div class="grid grid-rows-3">
        <div class="row-span-1 col-span-2">
            <h1 class="text-2xl mb-4 text-lefth text-blue-700">Detalhes</h1>
            <div class="divide-y divide-gray-400">
                <div class="py-2 grid grid-cols-2 divide-x">
                    <div class="text-center">Episódio :</div>
                    <div>
                        <p class="text-center text-blue-500 font-medium">
                             <%= @details['episode_id'] %>
                        </p>    
                    </div>
                </div>
                <div class="py-2 grid grid-cols-2 divide-x">
                    <div class="text-center">Diretor :</div>
                    <div>
                        <p class="text-center text-blue-500 font-medium">
                            <%= @details['director'] %>
                        </p>    
                    </div>
                </div>
                <div class="py-2 grid grid-cols-2 divide-x">
                    <div class="text-center">Produtor :</div>
                    <div>
                        <p class="text-center text-blue-500 font-medium">
                            <%= @details['producer'] %>
                        </p>    
                    </div>
                </div>
                <div class="py-2 grid grid-cols-2 divide-x">
                    <div class="text-center">Lançamento :</div>
                    <div>
                        <p class="text-center text-blue-500 font-medium">
                            <%= DateTime.parse(@details['release_date']).strftime("%d/%m/%Y") %>
                        </p>    
                    </div>
                </div>
            </div>
        </div>
        <div class="row-span-1 col-span-2 ">
            <h1 class="text-2xl mb-4 text-lefth text-blue-700">Abertura</h1>
            <%= @details['opening_crawl'] %>
        </div>
        <div class="row-span-1 col-span-2">
            <div class="grid grid-cols-2 divide-x divide-gray-400">
                <div class="divide-y divide-gray-400 ">
                    <h1 class="text-2xl mb-4 text-lefth text-blue-700">Personagens</h1>
                    <% @details['characters'][0,6].each do | character | %>
                        <div class="text-center py-2"><p><%= search_information_api('people',url_param(character)) %></p></div>
                    <% end %>   
                </div>
                <div class="divide-y divide-gray-400 ">
                    <h1 class="text-2xl mb-4 text-lefth text-blue-700">Planetas</h1>
                    <% @details['planets'][0,6].each do | planet | %>
                        <div class="text-center py-2"><p><%= search_information_api('planets',url_param(planet)) %></p></div>
                    <% end %>   
                </div>
            </div>
        </div>
    </div>
  </div>
</div>